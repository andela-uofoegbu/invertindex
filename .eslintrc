{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "prefer-rest-params":1,
    "no-use-before-define":1,
    "no-else-return":1,
    "eqeqeq":1,
    "no-useless-escape":1,
    "prefer-const":1,
    "camelcase":1,
    "no-plusplus":0,
    "no-underscore-dangle":0,
    "no-console": 0,
    "no-unused-vars": 0,
    "max-len":[2, 80, 2],
    "indent": [2, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "no-undef": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "global-require": 0,
    "curly": [2, "multi-line"],
    "no-shadow": [1, { "allow": ["req", "res", "err"] }],
    "valid-jsdoc": [2, {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": false,
      "requireReturnDescription": true
    }],
    "require-jsdoc": [2, {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
  }
}